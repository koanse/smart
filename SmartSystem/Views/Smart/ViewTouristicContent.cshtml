@model WebApplication1.Models.TouristicContentViewModel
@{
	ViewBag.Title = "Просмотр туристического контента";
}

<h2>@ViewBag.Title</h2>


<hr />
<div class="form-group">
	@Html.LabelFor(m => m.TouristicContent.Name, "Название:", new { @class = "col-md-2 control-label" })
	@Html.Raw(Model.TouristicContent.Name)
</div>

<hr />
<div class="form-group">
	@Html.LabelFor(m => m.TouristicContent.Description, "Описание:", new { @class = "col-md-2 control-label" })
		@Html.Raw(Model.TouristicContent.Description)
</div>

<hr />
<div class="form-group">
	@Html.LabelFor(m => m.TouristicContent.Price, "Ориентировочная цена:", new { @class = "col-md-2 control-label" })
	@Html.Raw(Model.TouristicContent.Price.ToString())
</div>

<hr />
<div class="form-group">
	@Html.LabelFor(m => m.TouristicContent.PurchaseWayDescription, "Описание способа покупки:", new { @class = "col-md-2 control-label" })
		@Html.Raw(Model.TouristicContent.PurchaseWayDescription)
</div>


@section Scripts {
	@Scripts.Render("~/bundles/jqueryval")
}